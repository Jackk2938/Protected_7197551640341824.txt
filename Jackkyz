local TweenService = game:GetService("TweenService")

local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local AnimeBtn = Instance.new("TextButton")
local DeadRailsBtn = Instance.new("TextButton")
local ToggleFrame = Instance.new("Frame")
local ToggleBtn = Instance.new("TextButton")
local OwnerLabel = Instance.new("TextLabel")

ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "ScriptUI"

MainFrame.Parent = ScreenGui
MainFrame.Name = "MainUI"
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 250, 0, 150)
MainFrame.Active = true
MainFrame.Draggable = true

UICorner.Parent = MainFrame

AnimeBtn.Parent = MainFrame
AnimeBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 255)
AnimeBtn.Position = UDim2.new(0.1, 0, 0.2, 0)
AnimeBtn.Size = UDim2.new(0.8, 0, 0.25, 0)
AnimeBtn.Text = "Arise Crossover"
AnimeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
AnimeBtn.TextScaled = true

DeadRailsBtn.Parent = MainFrame
DeadRailsBtn.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
DeadRailsBtn.Position = UDim2.new(0.1, 0, 0.55, 0)
DeadRailsBtn.Size = UDim2.new(0.8, 0, 0.25, 0)
DeadRailsBtn.Text = "Dead Rails"
DeadRailsBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
DeadRailsBtn.TextScaled = true

-- Owner label (JACKLOPEZSCRIPT)
OwnerLabel.Parent = MainFrame
OwnerLabel.BackgroundTransparency = 1
OwnerLabel.Position = UDim2.new(0.1, 0, 0, 0)
OwnerLabel.Size = UDim2.new(0.8, 0, 0.15, 0)
OwnerLabel.Text = "JACKLOPEZSCRIPT"
OwnerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
OwnerLabel.TextScaled = true
OwnerLabel.TextXAlignment = Enum.TextXAlignment.Center
OwnerLabel.TextYAlignment = Enum.TextYAlignment.Center

ToggleFrame.Parent = ScreenGui
ToggleFrame.Size = UDim2.new(0, 30, 0, 30)
ToggleFrame.Position = UDim2.new(0, 10, 0, 10)
ToggleFrame.BackgroundTransparency = 1
ToggleFrame.Active = true
ToggleFrame.Draggable = true

ToggleBtn.Parent = ToggleFrame
ToggleBtn.Size = UDim2.new(1, 0, 1, 0)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
ToggleBtn.Text = "X"
ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBtn.TextScaled = true

-- Tween settings
local function tweenFrame(frame, goal, time)
    local tweenInfo = TweenInfo.new(time, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local tween = TweenService:Create(frame, tweenInfo, goal)
    tween:Play()
end

ToggleBtn.MouseButton1Click:Connect(function()
    if MainFrame.Visible then
        tweenFrame(MainFrame, {Size = UDim2.new(0, 0, 0, 0), BackgroundTransparency = 1}, 0.3)
        wait(0.3)
        MainFrame.Visible = false
        MainFrame.Size = UDim2.new(0, 250, 0, 150)
        MainFrame.BackgroundTransparency = 0
    else
        MainFrame.Visible = true
        MainFrame.Size = UDim2.new(0, 0, 0, 0)
        MainFrame.BackgroundTransparency = 1
        tweenFrame(MainFrame, {Size = UDim2.new(0, 250, 0, 150), BackgroundTransparency = 0}, 0.3)
    end
end)

AnimeBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/perfectusmim1/script/refs/heads/main/crossover"))()
end)

DeadRailsBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/TwoGunVolley/FixedPlease/refs/heads/main/Protected_7197551640341824.txt"))()
end)
